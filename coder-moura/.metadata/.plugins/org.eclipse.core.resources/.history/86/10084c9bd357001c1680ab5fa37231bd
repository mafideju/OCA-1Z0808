package C_classes.exercises;

public class Comida {

	String nome;
	double peso;
	
	Comida(String nome, double peso) {
		this.nome = nome;
		this.peso = peso;
	}
	
	void comer(Comida comida) {
		if (comida != null) {
			System.out.println("Prato do dia: " + comida.nome);
			System.out.println(this.peso += comida.peso); 
		}
	}
}
